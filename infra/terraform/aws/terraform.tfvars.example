aws_region = "ap-northeast-1"                                                                                                                                                                                   
aws_profile = "default"

cognito_domain_prefix = "jobwatch-YYYYMMDD"

callback_urls = ["http://localhost:5173/auth/callback"]
logout_urls   = ["http://localhost:5173/"]

dynamodb_table_name = "jobwatch-table"

lambda_zip_path = "../../../api/build/lambda.zip"
api_cors_allow_origins = [
  "http://localhost:5173",
  "http://127.0.0.1:5173",
]

lambda_environment = {
  JOBWATCH_AWS_REGION              = "ap-northeast-1"
  JOBWATCH_APP_TIMEZONE            = "Asia/Tokyo"
  JOBWATCH_LOG_LEVEL               = "INFO"
  JOBWATCH_INVITATION_EXPIRY_HOURS = "168"
  JOBWATCH_CORS_ALLOWED_ORIGINS    = "[\"http://localhost:5173\",\"http://127.0.0.1:5173\"]"
}

tags = {
  Project = "jobwatch"
}
